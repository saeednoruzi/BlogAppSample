@model BlogAppSample.ViewModels.SearchViewModel
<div class="row">
    <div class="offset-4 col-4">
        <h2>Search by tag name</h2>
        <div class="row">
            <form asp-action="SearchByTag" asp-controller="Posts" method="get">
                <div class="input-group">
                    <button type="submit" class="btn btn-primary">جستجو</button>
                    <input asp-for="TagName" class="form-control" />
                    <label class="input-group-text">جستجو</label>
                </div>
            </form>
        </div>
    </div>
</div>
@if (Model.Posts != null)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>id</td>
                <td>title</td>
                <td>content</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.Title</td>
                    <td>@post.Content</td>
                </tr>
            }            
        </tbody>
    </table>
}